//--PLUGIN NIB--//
@import 'nib/vendor'
vendor-preixes = o ms moz webkit official
@import 'nib/gradients'
//--Variantes--//
color-amarillo = #DA9F01
color-rosa = #C95E5F
color-titulos = #464646
color-texto = #484848
color-bg-gris = #1A1A1A
color-bg-azul = #111820
color-borde = #9A9A9A
// -- Estilos --//
// Header //
#wpadminbar
    display none !important
body
    margin 0
    overflow-x hidden
    font-family 'Roboto', sans-serif
    font-size 16px
    width 100%
h1, h2, h3, h4, h5, h6
    font-family 'Montserrat', sans-serif
select
    display block
    opacity 1
header
    position fixed
    width 100%
    top 0
    left 0
    background rgba(0, 0, 0, 0.4)
    backdrop-filter blur(13px)
    border-bottom 1px solid color-borde
    z-index 9
    .cont-header
        width calc(100% - 300px)
        .logo
            display inline-block
            vertical-align top 
            background white
            padding 15px
        .cont-menu
            display inline-block
            vertical-align top 
            ul
                margin 0 0 0 40px
                padding 0
                height 100%
                display block
                li
                    display inline-block
                    vertical-align top
                    margin 0 10px 
                    a
                        color #fff
                        font-family 'Montserrat', sans-serif
                        font-size 16px
                        font-weight 600
                        padding 27px 0
                        display block
                    .sub-menu
                        display none
.carrusel-hoteles
    .card-hotel
        width 390px
        border 1px solid color-borde
        display inline-block
        margin 0 10px
        img
            width 100%
            height 200px
            object-fit cover
        .cont-card-hotel
            padding 32px
        label
            font-family 'Montserrat', sans-serif
            font-size 14px
        h6
            font-size 20px
            margin 16px 0
            font-weight 600
        .btn
            width 100%
            text-align center
        ul
            margin 0 0 32px
            li  
                display inline-block
                vertical-align top
                margin 0 32px 0 0
                a
                    font-size 20px
                    color color-titulos
.filter-hotels
    margin 0 0 32px
    span
        font-family 'Montserrat', sans-serif
        font-size 20px
        font-weight 600
        display inline-block
        vertical-align middle
        margin 0 16px 0 0 
    select
        width 300px
        font-family 'Montserrat', sans-serif
        font-size 20px
        display inline-block
        vertical-align middle
        border none
        border-bottom 1px solid color-borde
.btn 
    font-family 'Montserrat', sans-serif
    border 1px solid color-borde
    color color-texto
    padding 8px 16px !important
    background none
    line-height auto
    box-shadow none
    text-transform capitalize
    height auto
    font-size 16px
    &:hover, &:active, &:focus
        background color-amarillo
        box-shadow none
        color #fff
#bar-social
    position fixed
    width 70px
    height calc(100vh - 82px)
    left 0
    bottom 0
    background rgba(0, 0, 0, 0.4)
    backdrop-filter blur(13px)
    border-right 1px solid color-borde
    z-index 9
    .link-top
        position absolute
        top 0
        left 0
        width 100%
        margin 0
        li
            display block
            a
                display block
                background rgba(0, 0, 0, 0.4)
                height 70px
                border-bottom 1px solid color-borde
                text-align center
                color #fff
                padding 15px 0 0
                label
                    display block
                    margin -2px 0 0
    .link-bottom
        position absolute
        bottom 0
        left 0
        width 100%
        margin 0
        li
            display block
            a
                display block
                background rgba(0, 0, 0, 0.4)
                height 70px
                border-top 1px solid color-borde
                text-align center
                color #fff
                font-size 18px
                i
                    margin 25px 0 0
#home_slider
    width 100vw
    height 100vh
    #background-video
        width 100vw
        height 100vh
        object-fit cover
        position absolute
        left 0
        right 0
        top 0
        bottom 0
        z-index -1
    #more-info
        width 540px
        height 100vh
        position absolute
        top 0
        right 0
        z-index 10
        background red
.cont_page
    margin 50px 0
.dec
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    background linear-gradient(0deg, rgba(0,0,0,0.7231267507002801) 0%, rgba(0,0,0,0.3393732492997199) 35%, rgba(0,0,0,0) 100%);
    z-index 2