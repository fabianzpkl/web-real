//--PLUGIN NIB--//
@import 'nib/vendor'
vendor-preixes = o ms moz webkit official
@import 'nib/gradients'
//--Variantes--//
color-amarillo = #DA9F01
color-rosa = #C95E5F
color-titulos = #464646
color-texto = #484848
color-bg-gris = #1A1A1A
color-bg-azul = #111820
color-borde = #9A9A9A
// -- Estilos --//
// Header //
#wpadminbar
    display none !important
body
    margin 0
    overflow-x hidden
    font-family 'Roboto', sans-serif
    font-size 14px
h1, h2, h3, h4, h5, h6
    font-family 'Montserrat', sans-serif
header
    position fixed
    width 100%
    top 0
    left 0
    background rgba(0, 0, 0, 0.4)
    backdrop-filter blur(13px)
    border-bottom 1px solid color-borde
    .cont-header
        width calc(100% - 300px)
        .logo
            display inline-block
            vertical-align top 
            background white
            padding 15px
        .cont-menu
            display inline-block
            vertical-align top 
            ul
                margin 0 0 0 40px
                padding 0
                height 100%
                display block
                li
                    display inline-block
                    vertical-align top
                    margin 0 10px 
                    a
                        color #fff
                        font-family 'Montserrat', sans-serif
                        font-size 16px
                        font-weight 600
                        padding 27px 0
                        display block
                    .sub-menu
                        display none
#bar-social
    position fixed
    width 70px
    height calc(100vh - 79px)
    left 0
    bottom 0
    background rgba(0, 0, 0, 0.4)
    backdrop-filter blur(13px)
    border-right 1px solid color-borde
    .link-top
        position absolute
        top 0
        left 0
        width 100%
        margin 0
        li
            display block
            a
                display block
                background rgba(0, 0, 0, 0.4)
                height 70px
                border-bottom 1px solid color-borde
                text-align center
                color #fff
                padding 15px 0 0
                label
                    display block
                    margin -2px 0 0
    .link-bottom
        position absolute
        bottom 0
        left 0
        width 100%
        margin 0
        li
            display block
            a
                display block
                background rgba(0, 0, 0, 0.4)
                height 70px
                border-top 1px solid color-borde
                text-align center
                color #fff
                font-size 18px
                i
                    margin 25px 0 0
#home_slider
    width 100vw
    height 100vh
    #background-video
        width 100vw
        height 100vh
        object-fit cover
        position absolute
        left 0
        right 0
        top 0
        bottom 0
        z-index -1
    #more-info
        width 540px
        height 100vh
        position absolute
        top 0
        right 0
        z-index 5
        background red
.cont_page
    margin 50px 0